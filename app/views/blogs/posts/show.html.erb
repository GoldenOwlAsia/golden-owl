<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body.html_safe %>
</p>
<p>
  <%= @post.user.username unless @post.user.blank?%>
</p>
<p>
  Views:
  <%= @post.view %>
  |
  Comments:
  <%= @post.comments.count %>
</p>

<% if current_user == @post.user %>
    <%= link_to 'Edit', edit_blogs_post_path(@post) %>
<% end %>
<%= link_to 'Back', blogs_posts_path %>
<H4>Comments</H4>
<div id="comments">
  <%= render :partial => @post.comments %>
</div>
<%= simple_form_for [:blogs, @post, Comment.new] do |f| %>
  <p>
    <%= f.input :content, :label => "New Comment", as: :text, input_html: { rows: "3" } %>
  </p>
  <p><%= f.submit "Add Comment", class: "btn btn-primary" %></p>
<% end %>
