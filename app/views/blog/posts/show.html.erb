<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body.html_safe %>
</p>

<%= form_for([:blog, @post]) do |f| %>
  <div class="field">
    <%= f.label :Comments %><br>
    <%= f.text_field :title %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_blog_post_path(@post) %>
<%= link_to 'Back', blog_posts_path %>
